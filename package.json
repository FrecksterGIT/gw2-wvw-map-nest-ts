{
  "name": "gw2-ts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "coverage": "jest --coverage",
    "postbuild": "npm-run-all -s postbuild:views postbuild:public postbuild:js",
    "postbuild:views": "cpx src/views/** dist/views",
    "postbuild:public": "cpx src/public/**/*.{css,jpg,png} dist/public",
    "postbuild:js": "browserify --debug -t [ babelify ] -e ./src/public/javascripts/app.js -o ./dist/public/javascripts/app.js",
    "start": "ts-node src/main",
    "start:watch": "npm-run-all -p watch:*",
    "prod": "node dist/main",
    "test": "jest",
    "watch:backend": "cross-env NODE_ENV=development nodemon",
    "watch:frontend": "watchify --debug -t [ babelify ] -e ./src/public/javascripts/app.js -o ./dist/public/javascripts/app.js"
  },
  "devDependencies": {
    "@types/deep-diff": "0.0.31",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.7",
    "@types/socket.io": "^1.4.33",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "debug": "^3.1.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "socket.io-client": "^2.1.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "deep-diff": "^1.0.0",
    "express": "^4.16.3",
    "hbs": "^4.0.1",
    "node-fetch": "^2.1.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
